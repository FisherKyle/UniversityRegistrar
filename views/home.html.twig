<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link href="styles.css" rel="stylesheet" type="text/css">
        <title>Welcome to the Regitrar's Office</title>
    </head>

    <body>
        <div class="container jumbotron" id="big_box">
            <div class = "row">
                <h2>registrar database:</h2>

                <div class = "col-xs-6">
                    <form action="/add_course" method="post">
                        <div class="form-group has-primary">
                            <label for = "course">course name:</label>
                            <input class="form-control" type="text" id="course_name" name="course_name" class="form-control" placeholder="ex: Introduction to Jerky" required>
                            <label for = "course">course reference id:</label>
                            <input class="form-control" type="text" id="course_reference" name="course_reference" class="form-control" placeholder="ex: JRK_101" required>

                        </div>
                        <button type="submit" class="btn btn-success">add</button></br>
                    </form>
                    {% for course in courses %}
                    <h4><a href="/courses/{{ course.getId }}">{{ course.getClass }}</a></h4>
                    {% endfor %}

                </div>

                <div class = "col-xs-6">
                    <form action="/add_student" method="post">
                        <div class="form-group has-primary">
                            <label for = "course">student name:</label>
                            <input class="form-control" type="text" id="student_name" name="student_name" class="form-control" placeholder="ex: Brittanica Williams" required>
                            <label for = "course">student enrollment date:</label>
                            <input class="form-control" type="date" id="student_enrollment" name="student_enrollment" class="form-control" placeholder="ex: 12-01-2009" required>

                        </div>
                        <button type="submit" class="btn btn-success">add</button></br>
                    </form>
                    {% for student in students %}
                    <h4><a href="/students/{{ student.getId }}">{{ student.getName }}</a></h4>
                    {% endfor %}
                </div>

        </div>
    </body>
</html>
